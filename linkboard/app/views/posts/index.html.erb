
<span>
	<h1>Come look at all the fun posts!</h1>
</span>

<% @posts.each do |post|%>
	<div class="card post">
		<h2><a href="<%= post.link%>"><%=post.title%></a></h2>
		<p>By:<%= post.user.name %></p>
		<%=link_to "Delete", {:controller => "posts", :action => "destroy", :id => post.id}, class: "delete_btn"%>
		<a href="/posts/<%=post.id%>/comments"><button>Comment</button></a>
		<h3>Comments so far!</h3>
		<% @comments.each do |comment| %>
			<% if comment.post_id == post.id %>
				<h4><%=comment.user.name%></h4>
				<p><%=comment.body%></p>
				<%= link_to 'Delete Comment', delete_post_comment_path(post.id, comment.id), class: 'btn btn-danger', method: :delete %>
			<%end%>
		<%end%>
	</div>
<%end%>
